//EXERCICIO 4




function lerObjetoPessoas(objeto){
    let novoObjeto = {...objeto}

    novoObjeto.comidasPreferidas = ["comida1", "comida2", "comida3"]
    novoObjeto.melhorAmigo = {}








console.log(`O nome da pessoa é ${novoObjeto.nome} e suas comidas preferidas são ${novoObjeto.comidasPreferidas[0]}, ${novoObjeto.comidasPreferidas
    [1]} e ${novoObjeto.comidasPreferidas[2]}. Seu melhor amigo se chama ${novoObjeto.melhorAmigo.nome} e tem ${novoObjeto.melhorAmigo.idade}anos`);
